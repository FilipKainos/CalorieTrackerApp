<div class="bg-white rounded-2xl shadow-sm p-4 mb-4">
  <div class="flex items-center justify-between">
    <button id="prev-day" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
      <i data-lucide="chevron-left" class="w-5 h-5 text-gray-600"></i>
    </button>
    
    <div class="flex items-center gap-3">
      <div class="text-center">
        <div id="current-date-display" class="font-semibold text-gray-900">Today</div>
        <input 
          type="date" 
          id="date-picker" 
          class="text-xs text-primary-600 bg-transparent border-none cursor-pointer text-center focus:outline-none"
        >
      </div>
    </div>
    
    <div class="flex items-center gap-2">
      <button id="today-btn" class="px-3 py-1.5 text-sm font-medium bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-colors">
        Today
      </button>
      <button id="next-day" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
        <i data-lucide="chevron-right" class="w-5 h-5 text-gray-600"></i>
      </button>
    </div>
  </div>
</div>
