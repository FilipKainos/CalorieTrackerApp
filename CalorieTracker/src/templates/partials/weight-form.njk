<div class="bg-white rounded-2xl shadow-sm p-4 mb-4">
  <h2 class="text-sm font-semibold text-gray-700 mb-3 flex items-center gap-2">
    <i data-lucide="scale" class="w-4 h-4 text-blue-500"></i>
    Record Weight
  </h2>
  
  <form id="weight-form" class="space-y-3">
    <div class="grid grid-cols-2 gap-3">
      <div>
        <label for="weight-value" class="block text-xs font-medium text-gray-600 mb-1">Weight (kg)</label>
        <input 
          type="number" 
          id="weight-value" 
          name="weight"
          required
          min="20"
          max="500"
          step="0.1"
          placeholder="70.0"
          class="w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        >
      </div>
      
      <div>
        <label for="weight-date" class="block text-xs font-medium text-gray-600 mb-1">Date</label>
        <input 
          type="date" 
          id="weight-date" 
          name="date"
          required
          class="w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
        >
      </div>
    </div>
    
    <button 
      type="submit"
      class="w-full py-3 bg-gradient-to-r from-blue-500 to-blue-600 text-white font-medium rounded-xl hover:from-blue-600 hover:to-blue-700 transition-all shadow-sm flex items-center justify-center gap-2"
    >
      <i data-lucide="save" class="w-4 h-4"></i>
      Record Weight
    </button>
  </form>
</div>

<script>
  // Set default date to today
  document.addEventListener('DOMContentLoaded', () => {
    const dateInput = document.getElementById('weight-date');
    if (dateInput) {
      dateInput.value = new Date().toISOString().split('T')[0];
    }
  });
</script>
