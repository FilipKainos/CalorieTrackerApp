<div class="grid grid-cols-3 gap-3 mb-4">
  <!-- Daily Calories -->
  <div class="bg-white rounded-2xl shadow-sm p-4 text-center">
    <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center mx-auto mb-2">
      <i data-lucide="flame" class="w-5 h-5 text-orange-500"></i>
    </div>
    <div class="text-2xl font-bold text-gray-900" id="daily-calories">0</div>
    <div class="text-xs text-gray-500">Calories</div>
  </div>
  
  <!-- Daily Cost -->
  <div class="bg-white rounded-2xl shadow-sm p-4 text-center">
    <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-2">
      <i data-lucide="wallet" class="w-5 h-5 text-green-500"></i>
    </div>
    <div class="text-2xl font-bold text-gray-900" id="daily-cost">$0</div>
    <div class="text-xs text-gray-500">Spent</div>
  </div>
  
  <!-- Entry Count -->
  <div class="bg-white rounded-2xl shadow-sm p-4 text-center">
    <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-2">
      <i data-lucide="utensils" class="w-5 h-5 text-blue-500"></i>
    </div>
    <div class="text-2xl font-bold text-gray-900" id="daily-count">0</div>
    <div class="text-xs text-gray-500">Meals</div>
  </div>
</div>
