<div class="space-y-4">
  <!-- Goal Weight Card -->
  <div class="bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-sm p-4 text-white" id="goal-weight-card">
    <div class="flex items-center justify-between mb-3">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 bg-white/20 rounded-xl flex items-center justify-center">
          <i data-lucide="target" class="w-5 h-5"></i>
        </div>
        <div>
          <h3 class="font-semibold">Weight Goal</h3>
          <p class="text-xs text-blue-100" id="goal-subtitle">Set a target</p>
        </div>
      </div>
      <button onclick="window.app.showGoalModal()" class="p-2 bg-white/20 hover:bg-white/30 rounded-lg transition-colors">
        <i data-lucide="settings" class="w-4 h-4"></i>
      </button>
    </div>
    
    <div id="goal-content" class="text-center py-4">
      <button 
        onclick="window.app.showGoalModal()"
        class="px-4 py-2 bg-white/20 hover:bg-white/30 rounded-lg transition-colors"
      >
        Set Your Goal
      </button>
    </div>
  </div>

  <!-- Progress Chart -->
  <div class="bg-white rounded-2xl shadow-sm p-4" id="weight-chart-container" style="display: none;">
    <h3 class="text-sm font-semibold text-gray-700 mb-3 flex items-center gap-2">
      <i data-lucide="trending-down" class="w-4 h-4 text-blue-500"></i>
      Weight Progress
    </h3>
    <div id="weight-chart" class="h-48"></div>
  </div>

  <!-- Data Management -->
  <div class="bg-white rounded-2xl shadow-sm p-4">
    <h3 class="text-sm font-semibold text-gray-700 mb-3 flex items-center gap-2">
      <i data-lucide="database" class="w-4 h-4 text-gray-500"></i>
      Data Management
    </h3>
    
    <div class="space-y-2">
      <button 
        onclick="window.app.exportData()"
        class="w-full py-2.5 px-4 bg-primary-50 text-primary-600 rounded-lg hover:bg-primary-100 transition-colors flex items-center justify-center gap-2 text-sm font-medium"
      >
        <i data-lucide="download" class="w-4 h-4"></i>
        Export Backup
      </button>
      
      <button 
        onclick="window.app.showImportModal()"
        class="w-full py-2.5 px-4 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors flex items-center justify-center gap-2 text-sm font-medium"
      >
        <i data-lucide="upload" class="w-4 h-4"></i>
        Import Backup
      </button>
    </div>
    
    <div class="mt-3 p-3 bg-gray-50 rounded-lg">
      <p class="text-xs text-gray-600">
        <i data-lucide="info" class="w-3 h-3 inline mr-1"></i>
        Back up your data regularly to prevent loss
      </p>
    </div>
  </div>
</div>

<!-- Goal Weight Modal -->
<div id="goal-modal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl max-w-md w-full p-6 animate-scale-in">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-bold text-gray-900">Set Weight Goal</h3>
      <button onclick="window.app.closeGoalModal()" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
        <i data-lucide="x" class="w-5 h-5 text-gray-500"></i>
      </button>
    </div>
    
    <form id="goal-form" class="space-y-4">
      <div>
        <label for="goal-weight" class="block text-sm font-medium text-gray-700 mb-1">Target Weight (kg)</label>
        <input 
          type="number" 
          id="goal-weight" 
          required
          min="20"
          max="500"
          step="0.1"
          placeholder="75.0"
          class="w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
      </div>
      
      <div>
        <label for="goal-date" class="block text-sm font-medium text-gray-700 mb-1">Target Date</label>
        <input 
          type="date" 
          id="goal-date" 
          required
          class="w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
      </div>
      
      <div>
        <label for="start-weight" class="block text-sm font-medium text-gray-700 mb-1">Starting Weight (kg)</label>
        <input 
          type="number" 
          id="start-weight" 
          required
          min="20"
          max="500"
          step="0.1"
          placeholder="85.0"
          class="w-full px-3 py-2.5 bg-gray-50 border border-gray-200 rounded-xl text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
        >
      </div>
      
      <div class="flex gap-3 pt-2">
        <button 
          type="button"
          onclick="window.app.deleteGoal()"
          class="flex-1 py-2.5 px-4 bg-red-50 text-red-600 rounded-xl hover:bg-red-100 transition-colors font-medium"
        >
          Delete Goal
        </button>
        <button 
          type="submit"
          class="flex-1 py-2.5 px-4 bg-gradient-to-r from-blue-500 to-blue-600 text-white rounded-xl hover:from-blue-600 hover:to-blue-700 transition-colors font-medium"
        >
          Save Goal
        </button>
      </div>
    </form>
  </div>
</div>

<!-- Import Modal -->
<div id="import-modal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center p-4">
  <div class="bg-white rounded-2xl max-w-md w-full p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-bold text-gray-900">Import Backup</h3>
      <button onclick="window.app.closeImportModal()" class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
        <i data-lucide="x" class="w-5 h-5 text-gray-500"></i>
      </button>
    </div>
    
    <div class="mb-4">
      <label class="block text-sm font-medium text-gray-700 mb-2">Select Backup File</label>
      <input 
        type="file" 
        id="import-file" 
        accept=".json"
        class="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-medium file:bg-primary-50 file:text-primary-600 hover:file:bg-primary-100"
      >
    </div>
    
    <div class="p-3 bg-yellow-50 rounded-lg mb-4">
      <p class="text-xs text-yellow-800">
        <i data-lucide="alert-triangle" class="w-3 h-3 inline mr-1"></i>
        This will add to your existing data. Duplicate entries may be created.
      </p>
    </div>
    
    <button 
      onclick="window.app.importData()"
      class="w-full py-2.5 px-4 bg-gradient-to-r from-primary-500 to-primary-600 text-white rounded-xl hover:from-primary-600 hover:to-primary-700 transition-colors font-medium"
    >
      Import Data
    </button>
  </div>
</div>

<style>
@keyframes scale-in {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-scale-in {
  animation: scale-in 0.2s ease-out;
}
</style>
